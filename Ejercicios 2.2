public class AnalisisAlturas {

    public static void main(String[] args) {
        double[] alturas = {
            // ... tus datos
        };

        double alturaMaxima = obtenerAlturaMaxima(alturas);
        double alturaMinima = obtenerAlturaMinima(alturas);

        System.out.printf("La altura máxima de la clase es: %.2f metros%n", alturaMaxima);
        System.out.printf("La altura mínima de la clase es: %.2f metros%n", alturaMinima);
    }

    public static double obtenerAlturaMaxima(double[] alturas) {
        double alturaMaxima = alturas[0];
        for (double altura : alturas) {
            if (altura > alturaMaxima) {
                alturaMaxima = altura;
            }
        }
        return alturaMaxima;
    }

    public static double obtenerAlturaMinima(double[] alturas) {
        double alturaMinima = alturas[0];
        for (double altura : alturas) {
            if (altura < alturaMinima) {
                alturaMinima = altura;
            }
        }
        return alturaMinima;
    }
}
