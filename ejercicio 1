import java.util.Scanner;

public class TablaMultiplicar {
    public static void main(String[] args) {
        Scanner scanner = new Scanner(System.in);

        // Solicitar el número al usuario
        System.out.print("Introduce un número para generar su tabla de multiplicar: ");
        int multiplicador = scanner.nextInt();

        // Generar y mostrar la tabla de multiplicar
        System.out.println("Tabla de multiplicar del " + multiplicador + ":");
        for (int multiplicando = 1; multiplicando <= 10; multiplicando++) {
            int resultado = multiplicando * multiplicador;
            System.out.println(multiplicando + " x " + multiplicador + " = " + resultado);
        }

        scanner.close();
    }
}
